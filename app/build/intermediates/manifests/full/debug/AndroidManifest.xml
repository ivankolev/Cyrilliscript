<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.phaseshiftlab.cyrilliscript"
    android:versionName="INSTANT_RUN" >

    <uses-sdk android:minSdkVersion="19" />

    <uses-permission android:name="android.permission.NFC" />

    <application android:label="@string/ime_name" >
        <service
            android:name="com.phaseshiftlab.cyrilliscript.SoftKeyboard"
            android:permission="android.permission.BIND_INPUT_METHOD" >
            <intent-filter>
                <action android:name="android.view.InputMethod" />
            </intent-filter>

            <meta-data
                android:name="android.view.im"
                android:resource="@xml/method" />
        </service>

        <activity
            android:name="com.phaseshiftlab.cyrilliscript.ImePreferences"
            android:label="@string/settings_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.phaseshiftlab.cyrilliscript.TransparentActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_transparent"
            android:launchMode="singleTask"
            android:theme="@style/Theme.Transparent" >
            <intent-filter>
                <action android:name="android.nfc.action.TAG_DISCOVERED" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>