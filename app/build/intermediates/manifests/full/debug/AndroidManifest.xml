<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.phaseshiftlab.cyrilliscript" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:label="@string/ime_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.NoTitleBar" >
        <service
            android:name="com.phaseshiftlab.cyrilliscript.SoftKeyboard"
            android:permission="android.permission.BIND_INPUT_METHOD" >
            <intent-filter>
                <action android:name="android.view.InputMethod" />
            </intent-filter>

            <meta-data
                android:name="android.view.im"
                android:resource="@xml/method" />
        </service>

        <activity
            android:name="com.phaseshiftlab.cyrilliscript.ImePreferences"
            android:label="@string/settings_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <service
            android:name="com.phaseshiftlab.ocrlib.OcrService"
            android:enabled="true"
            android:exported="false" />

        <activity android:name="com.phaseshiftlab.ocrlib.PermissionRequester$PermissionRequestActivity" >
        </activity>
    </application>

</manifest>